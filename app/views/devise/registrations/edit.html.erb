<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% resource.errors.values.flatten.each do |error| %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <strong class="error-type"><%= I18n.t :error, scope: :form %></strong> <%= error %>
    </div>
  <% end %>

  <h2>Account Details</h2>

  <div class="row-fluid">
    <div class="span6">

      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, class: 'span12' %>

      <%= f.label :addiction, "\"I'm giving up...\"" %>
      <%= f.text_field :addiction, class: 'span12', placeholder: 'drinking, smoking... whatever you want to stop' %>

      <%= f.label :pronoun, "Preferred pronoun" %>
      <%= f.select :pronoun, pronoun_options_for_select, {}, class: 'span12 select-with-other' %>
      <%= f.text_field :custom_pronoun, class: 'span12 other-with-select', placeholder: 'enter your desired pronoun here' %>
    </div>

    <div class="span6">

      <%= f.label :email %>
      <%= f.email_field :email, class: 'span12' %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      <% end %>
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "only if you want to change it", class: 'span12' %>

      <%= f.label :password_confirmation, "New password confirmation" %>
      <%= f.password_field :password_confirmation, class: 'span12' %>

    </div>
  </div>
    <hr>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :current_password, "Password" %>
      <%= f.password_field :current_password, placeholder: "to confirm your changes", class: 'span12' %>
    </div>
  </div>
  <hr>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '/', class: 'btn' %>
  </div>
<% end %>
